@using CampCorr.ViewModels
@model LoginViewModel



<div class="form-outline form-white mb-4">

    <h4>Registrar Usuário</h4>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <hr />
        @if (@TempData["area"] == "adm")
        {
            <div class="dropdown">
                <label class="dropdown-header" asp-for="Area">Tipo de cadastro</label>
                <select name="area" asp-for="Area">
                    <option value="Adm">Campeonato</option>
                    <option value="Piloto">Piloto</option>
                </select>
            </div>
        }
        else
        {
            <div class="dropdown">
                <label class="dropdown-header" asp-for="Area">Tipo de cadastro</label>
                <select name="area" asp-for="Area">
                    <option value="Piloto">Cadastro de Piloto</option>
                    <option value="Adm">Cadastro de Campeonato</option>
                </select>
            </div>
        }

        <hr />
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Registrar" />
        </div>
    </form>
</div>

