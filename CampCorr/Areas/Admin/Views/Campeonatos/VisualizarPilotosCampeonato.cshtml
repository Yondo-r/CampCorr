@model IEnumerable<CampCorr.ViewModels.PilotoViewModel>

<h2 class="fw-bold mb-2 text-uppercase">Pilotos</h2>
<hr />
<h4>Pilotos já adicionados no campeonato</h4>
<div class="row">
    <div class="col-md-12">
        <table class="table text-white">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomePiloto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserLogin)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomePiloto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserLogin)
                        </td>

                        <td>
                            <a asp-action="RemovePilotoCampeonato" asp-route-pilotoId="@item.PilotoId" class="btn btn-danger">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<a class="btn btn-secondary" asp-action="BuscarPilotos">Adicionar novos pilotos</a>

<div>
    <a asp-action="Edit" asp-controller="Campeonatos">Voltar</a>
</div>
