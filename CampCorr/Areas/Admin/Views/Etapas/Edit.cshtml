@model CampCorr.Models.Etapa

@{
    ViewData["Title"] = "Editar";
    var circuitoId = TempData["circuitoId"];
    var anoTemporada = Convert.ToInt32(TempData["anoTemporada"]);
    var circuitos = ViewBag.Circuitos;
}

<h1>Editar</h1>

<h4>Etapa</h4>

<hr />

<div class="form-outline form-white mb-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="circuitoId" value=@circuitoId />
        <input type="hidden" name="anoTemporada" value="@anoTemporada" />
        <input type="hidden" asp-for="EtapaId" value="@Model.EtapaId" />
        <div class="form-group">
            <label asp-for="Traçado" class="control-label"></label>
            <input asp-for="Traçado" class="form-control" />
            <span asp-validation-for="Traçado" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data" class="control-label"></label>
            <input asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Kartodromo" class="control-label"></label>
            @Html.DropDownList("KartodromoId", new SelectList(circuitos, "CircuitoId", "Nome"), @Model.Kartodromo.Nome ,new {@class = "form-select"})
            <span asp-validation-for="Kartodromo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NumeroEvento" class="control-label"></label>
            <span>@TempData["NumeroEvento"]</span>
            <input asp-for="NumeroEvento" hidden value="@TempData["NumeroEvento"]" class="form-control" />
        </div>
        <hr />

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a class="btn btn-danger btn-block" asp-action="Delete" asp-controller="Etapas" asp-route-numeroEtapa="@TempData["NumeroEvento"]" asp-route-ano="@anoTemporada">Deletar</a>
</div>

<div>
    <a asp-action="Edit" asp-controller="Temporadas" asp-route-ano="@anoTemporada">Voltar</a>
</div>